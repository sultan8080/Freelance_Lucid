{% extends 'base.html.twig' %}

{% block title %}Sign In - Freelance Flow{% endblock %}

{% block body %}
{# Using bg-app-bg from your theme #}
<div class="min-h-screen flex items-center justify-center bg-app-bg py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg border border-gray-100">
        
        <div>
            {# Using text-primary from your theme #}
            <h2 class="text-center text-3xl font-extrabold text-primary italic tracking-tight">Freelance Flow</h2>
            <p class="mt-2 text-center text-sm text-gray-600 italic"> Sign in to your account</p>
        </div>

        {% if app.user %}
            <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-4 text-sm text-blue-700">
                You are logged in as <span class="font-bold">{{ app.user.userIdentifier }}</span>. 
                <a href="{{ path('app_logout') }}" class="underline font-medium hover:text-blue-800 ml-1">Sign out</a>
            </div>
        {% endif %}

        <form method="post">
            {% if error %}
                <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 text-sm text-red-700">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="space-y-4">
                <div>
                    <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email Address</label>
                    {# focus:ring-primary and focus:border-primary #}
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm" autocomplete="email" required autofocus placeholder="name@example.com">
                </div>
                
                <div>
                    <label for="inputPassword" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" name="password" id="inputPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm" autocomplete="current-password" required placeholder="••••••••">
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center mt-4">
                {# text-primary #}
                <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                <label for="remember_me" class="ml-2 block text-sm text-gray-900">Remember me</label>
            </div>

            <div class="mt-6">
                {# Using bg-primary and hover:bg-primary-hover from your theme #}
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
                    Sign in
                </button>
            </div>
            
            <div class="mt-4 text-center">
                <p class="text-xs text-gray-500">
                    Don't have an account? <a href="{{ path('app_register') }}" class="text-primary hover:underline font-medium">Register here</a>
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}