{% extends 'dashboard/base.html.twig' %}

{% block title %}Dashboard Overview {% endblock %}

{% block dashboard_content %}
    <div class="flex flex-col lg:flex-row gap-6 mb-10 items-start lg:items-center justify-between">
        <div class="flex-1">
            <h1 class="text-4xl font-extrabold text-primary tracking-tight mb-2">
                Dashboard
            </h1>
            <p class="text-slate-500 text-lg">
                {# Null-safe check: If no user is logged in, it shows 'Guest' #}
                Welcome back, {{ app.user ? app.user.userIdentifier : 'Guest' }}. Here is your project flow.
            </p>
        </div>

        <div class="glass-card p-4 rounded-3xl flex items-center gap-3 shadow-sm border-white/60">
            {# Using '#' as dummy links so Symfony doesn't look for non-existent routes #}
            <a href="{{ path('app_client_new') }}" class="bg-primary text-white px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-primary-hover shadow-indigo-glow transition-all hover:-translate-y-0.5">
                <i class="fas fa-plus mr-2"></i>
                Add Client
            </a>
            <a href="#" class="bg-white border border-slate-200 text-slate-700 px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-slate-50 transition-all shadow-sm">
                <i class="fas fa-file-invoice mr-2"></i>
                New Invoice
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-10">
        <div class="glass-card p-8 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                    <i class="fas fa-users"></i>
                </div>
                <span class="text-xs font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg">+12%</span>
            </div>
            <p class="text-slate-500 text-sm font-medium">Total Users</p>
            <h3 class="text-3xl font-bold text-slate-900 tracking-tight">1,248</h3>
        </div>

        <div class="glass-card p-8 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-xl bg-purple-50 flex items-center justify-center text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-colors">
                    <i class="fas fa-clock"></i>
                </div>
                <span class="text-xs font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg">+8%</span>
            </div>
            <p class="text-slate-500 text-sm font-medium">Active Sessions</p>
            <h3 class="text-3xl font-bold text-slate-900 tracking-tight">87</h3>
        </div>

        <div class="glass-card p-8 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                    <i class="fas fa-euro-sign"></i>
                </div>
                <span class="text-xs font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg">+23%</span>
            </div>
            <p class="text-slate-500 text-sm font-medium">Revenue</p>
            <h3 class="text-3xl font-bold text-slate-900 tracking-tight">â‚¬12,430</h3>
        </div>

        <div class="glass-card p-8 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600 group-hover:bg-amber-600 group-hover:text-white transition-colors">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <span class="text-xs font-bold text-amber-600 bg-amber-50 px-2 py-1 rounded-lg">New</span>
            </div>
            <p class="text-slate-500 text-sm font-medium">Tickets</p>
            <h3 class="text-3xl font-bold text-slate-900 tracking-tight">32</h3>
        </div>
    </div>

    <div class="glass-card rounded-[2.5rem] p-10 shadow-sm border-slate-200/50">
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-4">
                <div class="w-2 h-8 bg-indigo-600 rounded-full"></div>
                <h2 class="text-2xl font-bold text-slate-900">Recent Activity</h2>
            </div>
        </div>
        
        <div class="border-2 border-dashed border-slate-200 rounded-3xl p-12 flex flex-col items-center justify-center text-center">
            <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center text-slate-400 mb-4">
                <i class="fas fa-inbox text-2xl"></i>
            </div>
            <p class="text-lg font-medium text-slate-900">No data available yet</p>
            <p class="text-slate-500 max-w-sm mx-auto mt-1">
                Your recent activity will appear here once you start using the application.
            </p>
        </div>
    </div>
{% endblock %}