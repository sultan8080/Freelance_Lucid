{% extends 'dashboard/base.html.twig' %}

{% block title %}Create New Client{% endblock %}

{% block dashboard_content %}
    <div class="max-w-6 mx-auto">
        
        <a href="{{ path('app_client_index') }}" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-blue-400 transition-colors mb-6 group">
            <i class="fas fa-arrow-left text-xs group-hover:-translate-x-1 transition-transform"></i>
            Back to list
        </a>

        <div class="glass-card rounded-2xl p-6 sm:p-10 border border-white/10 relative overflow-hidden">
            
            <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/5 rounded-full blur-3xl -z-10 pointer-events-none"></div>

            <div class="mb-8 border-b border-white/5 pb-6">
                <h1 class="text-2xl font-bold text-white tracking-tight mb-2">Add New Client</h1>
                <p class="text-slate-400 text-sm">
                    Enter the details below to register a new business partner.
                </p>
            </div>

            {% block client_form %}
                {{ include('client/_form.html.twig', { form: form }) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}