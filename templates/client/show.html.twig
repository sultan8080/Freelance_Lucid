{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 py-12">
    {# Navigation & Actions #}
    <div class="flex items-center justify-between mb-8">
        <a href="{{ path('app_client_index') }}" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-primary transition-colors">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="15 19l-7-7 7-7"/></svg>
            Back to list
        </a>
        <div class="flex space-x-3">
            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="px-4 py-2 text-sm font-semibold text-slate-600 bg-white border border-slate-200 rounded-lg hover:bg-slate-50 transition-all shadow-sm">
                Edit Details
            </a>
            {{ include('client/_delete_form.html.twig') }}
        </div>
    </div>

    {# Profile Header Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden mb-8">
        <div class="h-24 bg-gradient-to-r from-primary to-indigo-400"></div>
        <div class="px-8 pb-8">
            <div class="relative -mt-12 flex items-end space-x-5">
                <div class="flex">
                    <div class="h-24 w-24 rounded-2xl bg-white p-1 shadow-md">
                        <div class="h-full w-full rounded-xl bg-slate-100 flex items-center justify-center text-primary text-3xl font-bold">
                            {{ client.firstName|first }}{{ client.lastName|first }}
                        </div>
                    </div>
                </div>
                <div class="flex-1 min-w-0 pb-1">
                    <h1 class="text-2xl font-bold text-dark truncate">{{ client.firstName }} {{ client.lastName }}</h1>
                    <p class="text-slate-500">{{ client.companyName ?: 'Individual Client' }}</p>
                </div>
            </div>

            {# Information Grid #}
            <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
                <div>
                    <h3 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-4">Contact Information</h3>
                    <div class="space-y-4">
                        <div class="flex items-center text-slate-600">
                            <svg class="w-5 h-5 mr-3 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 100-4H5a2 2 0 100 4z"/></svg>
                            <span class="text-sm">{{ client.email }}</span>
                        </div>
                        <div class="flex items-center text-slate-600">
                            <svg class="w-5 h-5 mr-3 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                            <span class="text-sm font-mono">{{ client.phoneNumber }}</span>
                        </div>
                    </div>
                </div>

                <div>
                    <h3 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-4">Primary Address</h3>
                    <div class="flex items-start text-slate-600">
                        <svg class="w-5 h-5 mr-3 text-slate-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                        <span class="text-sm leading-relaxed">{{ client.address }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}