{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit Client -
	{{ client.fullName }}
{% endblock %}

{% block dashboard_content %}
	<div class="max-w-6 mx-auto">

		<a href="{{ path('app_client_index') }}" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-blue-400 transition-colors mb-6 group">
			<i class="fas fa-arrow-left text-xs group-hover:-translate-x-1 transition-transform"></i>
			Back to list
		</a>

		<div class="glass-card rounded-2xl p-6 sm:p-10 border border-white/10 relative overflow-hidden">

			<div class="absolute top-0 right-0 w-64 h-64 bg-purple-500/5 rounded-full blur-3xl -z-10 pointer-events-none"></div>

			<div class="mb-8 border-b border-white/5 pb-6">
				<div class="flex items-center gap-3 mb-2">
					<div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-600/20 to-purple-600/20 flex items-center justify-center text-white font-bold border border-white/10">
						{{ client.fullName|slice(0,2)|upper }}
					</div>
					<h1 class="text-2xl font-bold text-white tracking-tight">Edit Client</h1>
				</div>
				<p class="text-slate-400 text-sm">
					Update details for
					<span class="text-white font-medium">{{ client.companyName ?: client.fullName }}</span>
				</p>
			</div>

			{% block client_form %}
				{{ include('client/_form.html.twig', { 
                    form: form, 
                    button_label: 'Update Client' 
                }) }}
			{% endblock %}

			<div class="mt-12 pt-8 border-t border-red-500/10">
				<h3 class="text-xs font-bold text-red-400 uppercase tracking-widest mb-4 flex items-center gap-2">
					<i class="fas fa-exclamation-triangle"></i>
					Danger Zone
				</h3>
				<div class="flex items-center justify-between bg-red-500/5 rounded-xl p-4 border border-red-500/10">
					<div>
						<p class="text-sm text-slate-300 font-medium">Delete this client</p>
						<p class="text-xs text-slate-500">Once deleted, this action cannot be undone.</p>
					</div>
					{{ include('client/_delete_form.html.twig') }}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
