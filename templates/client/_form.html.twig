			{{ form_widget(form.vatNumber, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-600 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50 transition-all',
