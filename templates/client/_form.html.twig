{{ form_start(form, {
    attr: {
        class: 'space-y-8',
        id: 'client_form'
    }
}) }}

{# Global Errors (Red Glass) #}
<div class="form-error mb-2">
	{{ form_errors(form) }}
</div>

{# --- 1. Personal Details --- #}
<div class="space-y-6">
	<div class="flex items-center gap-2 mb-4 ml-1">
		<div class="w-1 h-4 bg-blue-500 rounded-full"></div>
		<h3 class="text-[10px] font-black uppercase tracking-widest text-blue-400">{{ 'Personal Details'|trans }}</h3>
	</div>

	<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
		<div class="group">
			{{ form_label(form.firstName, 'First Name'|trans, {'label_attr': {'class': 'block text-xs font-bold text-slate-400 mb-2 ml-1'}}) }}
			{{ form_widget(form.firstName, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-600 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all',
                    'placeholder': 'John'
                }
            }) }}
			{% if form.firstName.vars.errors|length > 0 %}
				<p class="text-red-400 text-xs mt-1 ml-1">
					{{ form_errors(form.firstName)|striptags }}
				</p>
			{% endif %}
		</div>

		<div class="group">
			{{ form_label(form.lastName, 'Last Name'|trans, {'label_attr': {'class': 'block text-xs font-bold text-slate-400 mb-2 ml-1'}}) }}
			{{ form_widget(form.lastName, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-600 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all',
                    'placeholder': 'Doe'
                }
            }) }}
			{% if form.lastName.vars.errors|length > 0 %}
				<p class="text-red-400 text-xs mt-1 ml-1">
					{{ form_errors(form.lastName)|striptags }}
				</p>
			{% endif %}
		</div>

		<div class="group">
			{{ form_label(form.email, 'Email Address'|trans, {'label_attr': {'class': 'block text-xs font-bold text-slate-400 mb-2 ml-1'}}) }}
			{{ form_widget(form.email, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-600 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all',
                    'placeholder': 'john@example.com'
                }
            }) }}
			{% if form.email.vars.errors|length > 0 %}
				<p class="text-red-400 text-xs mt-1 ml-1">
					{{ form_errors(form.email)|striptags }}
				</p>
			{% endif %}
		</div>

		<div class="group">
			{{ form_label(form.phoneNumber, 'Phone Number'|trans, {'label_attr': {'class': 'block text-xs font-bold text-slate-400 mb-2 ml-1'}}) }}
			{{ form_widget(form.phoneNumber, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-600 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all',
                    'placeholder': '+33 1 23 45 67 89'
                }
            }) }}
			{% if form.phoneNumber.vars.errors|length > 0 %}
				<p class="text-red-400 text-xs mt-1 ml-1">
					{{ form_errors(form.phoneNumber)|striptags }}
				</p>
			{% endif %}
		</div>
	</div>
</div>

