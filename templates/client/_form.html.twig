{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': 'John'}}) }}
            {{ form_errors(form.firstName, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
        <div>
            {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': 'Doe'}}) }}
            {{ form_errors(form.lastName, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
    </div>

    <div>
        {{ form_label(form.companyName, 'Company Name (Optional)', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
        {{ form_widget(form.companyName, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': 'Acme Corp'}}) }}
    </div>

    <div>
        {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': 'john@example.com'}}) }}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            {{ form_label(form.phoneNumber, 'Phone Number', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': '+33 6 ...'}}) }}
        </div>
        <div>
            {{ form_label(form.address, 'Physical Address', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-1'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none', 'placeholder': '123 Street, City'}}) }}
        </div>
    </div>

    <div class="pt-4 flex items-center justify-end space-x-4 border-t border-slate-100">
        <a href="{{ path('app_client_index') }}" class="text-sm font-medium text-slate-500 hover:text-slate-700">Cancel</a>
        <button type="submit" class="px-6 py-2.5 bg-primary hover:bg-primary-hover text-white font-semibold rounded-lg shadow-sm transition-all">
            {{ button_label|default('Save Client') }}
        </button>
    </div>
{{ form_end(form) }}