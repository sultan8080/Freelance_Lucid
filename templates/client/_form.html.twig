{{ form_start(form, {
    attr: {
        class: 'space-y-8',
        id: 'client_form'
    }
}) }}


<div class="form-errors mb-2">
	{{ form_errors(form) }}
</div>

{# Personal Details #}
<div class="space-y-6">
	<h3 class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4 ml-1">Personal Details</h3>

	<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
		<div class="group">
			{{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
			{{ form_widget(form.firstName, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                    'placeholder': 'John'
                }
            }) }}
			{% if form.firstName.vars.errors|length > 0 %}
				<p class="form-error">
					{{ form_errors(form.firstName)|striptags }}
				</p>
			{% endif %}
		</div>

		<div class="group">
			{{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
			{{ form_widget(form.lastName, {
                'attr': {
                    'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                    'placeholder': 'Doe'
                }
            }) }}
			{% if form.lastName.vars.errors|length > 0 %}
				<p class="form-error">
					{{ form_errors(form.lastName)|striptags }}
				</p>
			{% endif %}
		</div>
	</div>
</div>

{# Professional Details #}
<div class="space-y-6">
	<h3 class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4 ml-1">Professional Details</h3>

	<div class="group">
		{{ form_label(form.companyName, 'Company Name', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
		{{ form_widget(form.companyName, {
            'attr': {
                'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                'placeholder': 'Acme Corp'
            }
        }) }}
		{% if form.companyName.vars.errors|length > 0 %}
			<p class="form-error">
				{{ form_errors(form.companyName)|striptags }}
			</p>
		{% endif %}

	</div>

	<div class="group">
		{{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
		{{ form_widget(form.email, {
            'attr': {
                'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                'placeholder': 'john@example.com'
            }
        }) }}
		{% if form.email.vars.errors|length > 0 %}
			<p class="form-error">
				{{ form_errors(form.email)|striptags }}
			</p>
		{% endif %}

	</div>
</div>

{# Logistics #}
<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
	<div class="group">
		{{ form_label(form.phoneNumber, 'Phone', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
		{{ form_widget(form.phoneNumber, {
            'attr': {
                'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                'placeholder': '+33'
            }
        }) }}
		{% if form.phoneNumber.vars.errors|length > 0 %}
			<p class="form-error">
				{{ form_errors(form.phoneNumber)|striptags }}
			</p>
		{% endif %}

	</div>

	<div class="group">
		{{ form_label(form.address, 'Address', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2 ml-1'}}) }}
		{{ form_widget(form.address, {
            'attr': {
                'class': 'w-full px-5 py-3 rounded-xl border border-slate-200/60 bg-white/40 backdrop-blur-sm focus:ring-primary/10 focus:border-primary transition-all',
                'placeholder': '123 Business Way'
            }
        }) }}
		{% if form.address.vars.errors|length > 0 %}
			<p class="form-error">
				{{ form_errors(form.address)|striptags }}
			</p>
		{% endif %}
	</div>
</div>

{# Actions #}
<div class="pt-8 flex items-center justify-end space-x-4">
	<a href="{{ path('app_client_index') }}" class="px-6 py-3 text-sm font-bold text-slate-500 bg-transparent border-2 border-slate-200 rounded-2xl hover:bg-slate-100 transition-all">
		Discard
	</a>

	<button type="submit" class="px-8 py-3 bg-primary text-white font-bold rounded-2xl hover:bg-primary-hover transition-all">
		{{ button_label|default('Save Client') }}
	</button>
</div>

{{ form_end(form) }}
