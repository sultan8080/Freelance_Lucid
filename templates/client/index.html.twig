{% extends 'dashboard/base.html.twig' %}

{% block title %}Clients Management
{% endblock %}

{% block dashboard_content %}

	<div class="flex flex-col lg:flex-row gap-6 mb-10 items-start lg:items-center justify-between">
		<div class="flex-1">
			<h1 class="text-4xl font-extrabold text-primary tracking-tight mb-2">
				Clients Management
			</h1>
			<p class="text-slate-500 text-lg">
				Manage your clients Information
			</p>
		</div>

		<div
			class="glass-card p-4 rounded-3xl flex items-center gap-3 shadow-sm border-white/60">
			{# Using '#' as dummy links so Symfony doesn't look for non-existent routes #}
			<a href="#" class="bg-primary text-white px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-primary-hover shadow-indigo-glow transition-all hover:-translate-y-0.5">
				<i class="fas fa-plus mr-2"></i>
				Add Client
			</a>
			<a href="#" class="bg-white border border-slate-200 text-slate-700 px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-slate-50 transition-all shadow-sm">
				<i class="fas fa-file-invoice mr-2"></i>
				New Invoice
			</a>
		</div>
	</div>

	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
		<turbo-frame id="client_frame">
			<twig:ClientTable/>
		</turbo-frame>
	</div>
{% endblock %}
