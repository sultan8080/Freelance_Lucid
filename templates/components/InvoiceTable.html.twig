<div{{attributes}}>
	<p class="text-slate-400 text-base md:text-lg mb-4 md:mb-8">
		{{ 'Manage your Invoices Information'|trans }}
	</p>

	<div
		class="flex flex-col sm:flex-row items-center gap-4 w-full mb-6 md:mb-10">

		{#  SEARCH INPUT #}
		<div class="relative flex-1 w-full">
			<div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
				<i class="fas fa-search text-slate-500"></i>
			</div>
			<input type="text" data-model="query" placeholder="{{ 'Search by invoices / company name / project title...'|trans }}" class="w-full pl-11 pr-4 py-3 rounded-xl border border-white/10 bg-white/5 text-white placeholder-slate-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all text-sm backdrop-blur-md">
		</div>

		{#  FILTER DROPDOWN #}
		<div class="relative w-full sm:w-56 shrink-0">
			<div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
				<i class="fas fa-filter text-slate-500 text-xs"></i>
			</div>
			<select data-model="status" class="w-full pl-10 pr-8 py-3 rounded-xl border border-white/10 bg-white/5 text-slate-300 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all text-sm appearance-none cursor-pointer">
				<option value="" class="bg-slate-800 text-slate-400">{{ 'All Invoices'|trans }}</option>
				<option value="DRAFT" class="bg-slate-800 text-slate-300">{{ 'Draft'|trans }}</option>
				<option value="SENT" class="bg-slate-800 text-blue-400">{{ 'Sent'|trans }}</option>
				<option value="PAID" class="bg-slate-800 text-emerald-400">{{ 'Paid'|trans }}</option>
				<option value="OVERDUE" class="bg-slate-800 text-red-400 font-bold">{{ 'Unpaid / Overdue'|trans }}</option>
			</select>

			<div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
				<i class="fas fa-chevron-down text-slate-500 text-xs"></i>
			</div>
		</div>

		{# --- 3. ADD BUTTON --- #}
		<div class="shrink-0 w-full sm:w-auto">
			<a href="{{ path('app_invoice_new') }}" class="group relative flex items-center justify-center w-full sm:w-auto px-6 py-3 rounded-xl overflow-hidden shadow-lg shadow-blue-500/20 transition-all hover:scale-[1.02]">
				<div class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-600 to-purple-700 opacity-90 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent group-hover:animate-shimmer"></div>
				<span class="relative flex items-center gap-2 text-sm font-semibold text-white">
					<i class="fas fa-plus"></i>
					{{ 'Add Invoice'|trans }}
				</span>
			</a>
		</div>
	</div>

	{# Table Card (Dark Glass) #}
	<div class="glass-card rounded-2xl overflow-hidden border border-white/10 transition-opacity duration-200" data-loading="addClass(opacity-50 pointer-events-none)">
		<div class="overflow-x-auto">
			<table class="w-full text-left border-collapse">
				<thead>
					<tr
						class="border-b border-white/5 bg-white/5">

						{# Invoice Info: Always Visible #}
						<th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">
							{{ 'Invoice'|trans }}
						</th>

						{# Project: Hidden on Mobile (!important) #}
						<th class="px-6 py-4 text-xs !hidden md:!table-cell !whitespace-nowrap font-bold uppercase tracking-wider text-slate-400 text-left">
							{{ 'Project Title'|trans }}
						</th>

						{# Amount: Hidden on Mobile (!important) #}
						<th class="px-6 py-4 text-xs font-bold !hidden md:!table-cell !whitespace-nowrap uppercase tracking-wider text-slate-400 text-right">
							{{ 'Total'|trans }}
							<span class="font-normal text-slate-500 lowercase">{{ '/ net'|trans }}</span>
						</th>

						{# Actions: Always Visible #}
						<th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400 text-right">
							{{ 'Actions'|trans }}
						</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-white/5">
					{% for invoice in this.invoices %}
						<tr
							class="hover:bg-white/5 transition-colors group">

							{# Invoice Info Column #}
							<td class="px-6 py-4 align-top pt-4">
								<div class="flex items-start gap-4">

									<div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center text-xs font-bold text-slate-400 border border-white/10">
										<i class="fas fa-file-invoice text-sm"></i>
									</div>
									<div
										class="flex flex-col gap-1">
										{# A. Invoice Number #}
										<div class="flex items-center gap-2">
											{% if invoice.status == 'DRAFT' %}
												<span class="font-bold text-blue-400 transition-colors text-sm">
													{{ 'DRAFT'|trans }}
													-
													{{ invoice.id }}
												</span>
											{% else %}
												<span class="font-bold text-purple-400 transition-colors text-sm ">
													{{ invoice.invoiceNumber }}
												</span>
											{% endif %}

										</div>

										{# B. Client Name #}
										<span class="text-xs text-slate-400 font-medium">
											{% if invoice.frozenClientName %}
												<i class="fas fa-lock text-[10px] mr-1 opacity-50" title="{{ 'Locked Data'|trans }}"></i>
												{{ invoice.frozenClientName }}
											{% elseif invoice.client %}
												{{ invoice.client.fullName }}
											{% else %}
												<span class="text-red-400 italic">{{ 'No Client'|trans }}</span>
											{% endif %}
										</span>

										{# C. Status & Date Logic #}
										<div
											class="mt-1 flex items-center gap-2 flex-wrap">
											{# Status Badge #}
											{% if invoice.status == 'PAID' %}
												<span class="text-[10px] font-bold bg-emerald-500/10 border border-emerald-500/20 p-1 px-2 rounded-md uppercase tracking-wide text-emerald-400">
													{{ 'PAID'|trans }}
												</span>
											{% elseif invoice.isOverdue %}
												<span class="text-[10px] font-bold p-1 px-2 rounded-md bg-red-500/10 border border-red-500/20 uppercase tracking-wide text-red-400">
													{{ 'UNPAID / OVERDUE'|trans }}
												</span>
											{% elseif invoice.status == 'SENT' %}
												<span class="text-[10px] font-bold uppercase tracking-wide p-1 px-2 rounded-md bg-blue-500/10 border border-blue-500/20 text-blue-400">
													{{ 'SENT'|trans }}
												</span>
											{% else %}
												<span class="text-[10px] font-bold uppercase tracking-wide p-1 px-2 rounded-md bg-slate-500/10 border border-slate-500/20 text-slate-400">
													{{ 'DRAFT'|trans }}
												</span>
											{% endif %}

											{# Smart Date Display #}
											{% if invoice.status == 'SENT' %}
												<span class="text-slate-600 text-[10px]">•</span>
												{% if invoice.isOverdue %}
													<span class="text-[10px] font-bold text-red-400 flex items-center gap-1">
														<i class="fas fa-exclamation-circle"></i>
														{{ 'Overdue'|trans }}
														{{ invoice.dueDate|date('d M Y') }}
													</span>
												{% else %}
													<span class="text-[10px] text-slate-500">
														{{ 'Due'|trans }}
														{{ invoice.dueDate|date('d M Y') }}
													</span>
												{% endif %}
											{% elseif invoice.status == 'PAID' %}
												<span class="text-slate-600 text-[10px]">•</span>
												<span class="text-[10px] text-emerald-500/70">
													{{ invoice.paidAt|date('d M Y') }}
												</span>
											{% endif %}
										</div>
									</div>
								</div>
							</td>

							{# Project Column #}
							<td class="px-6 py-4 !hidden md:!table-cell !whitespace-nowrap text-left align-top pt-5">
								<div class="text-slate-200 text-sm font-medium truncate">
									{{ invoice.projectTitle ?: 'No Project Title'|trans }}
								</div>
								<span class="text-xs text-slate-500 font-medium truncate">{{ invoice.client.companyName }}</span>
							</td>

							{# Amount Column #}
							<td
								class="px-6 py-4 text-right align-top pt-5 !hidden md:!table-cell !whitespace-nowrap">
								{# 1. Total (Gross) #}
								<div class="font-bold text-white text-sm md:text-base">
									{{ invoice.totalAmount|number_format(2, '.', ',') }}
									<span class="text-xs font-normal text-slate-500 ml-0.5">{{ invoice.currency }}</span>
								</div>

								{# 2. Net #}
								{% if invoice.status == 'PAID' %}
									<div class="text-xs font-bold text-emerald-500 mt-1">
										{{ 'Net:'|trans }}
										{{ invoice.netEstimate|number_format(2, '.', ',') }}
										€
									</div>
								{% else %}
									<div class="text-xs font-medium text-slate-500 mt-1">
										{{ 'Net:'|trans }}
										{{ invoice.netEstimate|number_format(2, '.', ',') }}
										€
									</div>
								{% endif %}
							</td>

							{# Actions Column #}
							<td class="px-6 py-4 text-right align-top pt-4">
								<div
									class="flex justify-end gap-2">

									{# View #}
									<a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="p-2 rounded-lg text-slate-500 hover:bg-blue-500/10 hover:text-blue-400 transition-all" title="{{ 'View Details'|trans }}">
										<i class="fas fa-eye"></i>
									</a>

									<span class="text-slate-700 py-2">|</span>

									{# Edit Logic #}
									{% if invoice.status == 'DRAFT' %}
										{# DRAFT: Full Edit (Blue) #}
										<a href="{{ path('app_invoice_edit', {id: invoice.id}) }}" class="p-2 rounded-lg text-slate-500 hover:bg-blue-500/10 hover:text-blue-400 transition-all" title="{{ 'Edit Draft'|trans }}">
											<i class="fas fa-edit"></i>
										</a>
									{% else %}
										{# SENT or PAID: Update Status (Amber) #}
										<a href="{{ path('app_invoice_edit', {id: invoice.id}) }}" class="p-2 rounded-lg text-slate-500 hover:bg-amber-500/10 hover:text-amber-400 transition-all" title="{{ 'Update Status / Revert'|trans }}">
											<i class="fas fa-sliders-h"></i>
										</a>
									{% endif %}

									{# Delete Logic #}
									{% if invoice.status == 'DRAFT' %}
										<form method="post" action="{{ path('app_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('{{ 'Delete this draft?'|trans }}');" class="inline">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
											<button class="p-2 rounded-lg text-slate-500 hover:bg-red-500/10 hover:text-red-400 transition-all ml-1">
												<i class="fas fa-trash"></i>
											</button>
										</form>
									{% endif %}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="px-6 py-12 text-center">
								<div class="flex flex-col items-center justify-center gap-3">
									<div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-slate-600">
										<i class="fas fa-file-invoice text-xl"></i>
									</div>
									<p class="text-slate-500">{{ 'No invoices found.'|trans }}</p>
									<a href="{{ path('app_invoice_new') }}" class="text-blue-400 text-sm hover:underline font-medium transition-colors">{{ 'Create your first invoice'|trans }}</a>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	{# 1. CALCULATE THE PAGES #}
	{% set pagination = this.invoices %}
	{% set totalItems = pagination|length %}
	{% set totalPages = (totalItems / this.itemsPerPage)|round(0, 'ceil') %}

	{# 2. SHOW THE BUTTONS #}
	{% if totalPages > 1 %}
		<div class="flex flex-col md:flex-row items-center justify-between mt-6 px-2 border-t border-white/5 pt-4 gap-4">

			<div class="text-xs md:text-sm text-slate-500 order-2 md:order-1">
				{{ 'Page'|trans }}
				<span class="font-bold text-white">{{ this.page }}</span>
				{{ 'of'|trans }}
				{{ totalPages }}
				<span class="text-slate-600 ml-1">({{ totalItems }}
					{{ 'total invoices'|trans }})</span>
			</div>

			{# Buttons #}
			<div
				class="flex gap-2 order-1 md:order-2">
				{# PREVIOUS #}
				<button data-action="live#update" data-model="page" data-value="{{ this.page - 1 }}" {% if this.page <= 1 %}disabled{% endif %} class="px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-xs font-medium text-slate-300 hover:bg-white/10 disabled:opacity-30 disabled:cursor-not-allowed transition-all flex items-center gap-2" > <i class="fas fa-chevron-left"></i> {{ 'Previous'|trans }} </button> {# NEXT #} <button data-action="live#update" data-model="page" data-value="{{ this.page + 1 }}" {% if this.page > totalPages %}disabled {% endif %} class="px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-xs font-medium text-slate-300 hover:bg-white/10 disabled:opacity-30 disabled:cursor-not-allowed transition-all flex items-center gap-2">
					{{ 'Next'|trans }}
					<i class="fas fa-chevron-right"></i>
				</button>
			</div>
		</div>
	{% endif %}
</div>
