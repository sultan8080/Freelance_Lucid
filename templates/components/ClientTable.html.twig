<div{{attributes}}>
	<!-- component HTML -->

	<p class="text-slate-500 text-base md:text-lg mb-4 md:mb-8">
		Manage your clients Information
	</p>

	<div class="flex flex-row items-center gap-4 w-full mb-6 md:mb-10">

		<div class="flex-1">
			<input type="text" data-model="query" placeholder="  Search clients..." class="w-full pl-11 pr-12 py-2.5 rounded-2xl border border-slate-200 bg-white/50 backdrop-blur-md
						                   focus:ring-4 focus:ring-primary/10 transition-all outline-none text-sm md:text-base">
		</div>

		<div class="shrink-0">
			<a href="{{ path('app_client_new')}}" class="inline-flex items-center justify-center whitespace-nowrap bg-primary text-white px-4 md:px-6 py-2.5 rounded-2xl text-xs md:text-sm font-semibold hover:bg-primary-hover shadow-indigo-glow transition-all hover:-translate-y-0.5">
				<i class="fas fa-plus mr-2"></i>
				Add Client
			</a>
		</div>
	</div>

	{# Table Card #}
	<div class="glass-card rounded-bento overflow-hidden">
		<div class="overflow-x-auto">
			<table class="w-full text-left border-collapse">
				<thead>
					<tr
						class="bg-slate-50 border-b border-card-border">
						{# Always Visible #}
						<th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-600">Name / Company</th>

						{# Hidden on Mobile, Visible on Tablet/Desktop #}
						<th class="!hidden md:!table-cell !whitespace-nowrap px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-600">Contact</th>
						<th class="!hidden md:!table-cell !whitespace-nowrap px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-600">Address</th>

						{# Always Visible #}
						<th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-600 text-right">Actions</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-slate-100">
					{% for client in this.clients %}
						<tr
							class="hover:bg-slate-50 transition-colors">
							{# Always Visible #}
							<td class="px-6 py-4 whitespace-nowrap">
								<div class="font-semibold text-slate-900 text-sm md:text-base">{{ client.fullName }}
								</div>
								<div class="text-xs text-slate-500">{{ client.companyName ?: 'Individual' }}</div>
							</td>

							{# Email: Hidden on Mobile #}
							<td class="!hidden md:!table-cell px-6 py-4 !whitespace-nowrap text-sm text-slate-600">
								<div class="flex flex-col">
									<span class="font-medium text-slate-700">{{ client.email }}</span>
									<span class="text-xs text-slate-400 truncate max-w-[200px]">{{ client.phoneNumber }}</span>
								</div>
							</td>

							{# Contact: Hidden on Mobile #}
							<td class=" !hidden md:!table-cell !whitespace-nowrap  px-6 py-4 text-sm text-slate-600">
								<div class="flex flex-col">
									<span class="font-medium text-slate-700">{{ client.address }}</span>
									<span class="text-xs text-slate-400 truncate max-w-[200px]">{{ client.postCode }} {{ client.city }}</span>
								</div>
							</td>

							{# Actions: Always Visible Hide the vertical divider on mobile 
																																											#}
							<td class="px-6 py-4 text-right">
								<div class="flex justify-end gap-2">
									<a href="{{ path('app_client_show', {id: client.id}) }}" class="p-2 hover:bg-white rounded-lg text-slate-400 hover:text-primary transition-all">
										<i class="fas fa-eye"></i>
									</a>

									<span class="text-slate-200">|</span>
									<a href="{{ path('app_client_edit', {id: client.id}) }}" class="p-2 hover:bg-white rounded-lg text-slate-400 hover:text-primary transition-all">
										<i class="fas fa-edit"></i>
									</a>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4" class="px-6 py-12 text-center text-slate-500 italic bg-slate-50">
								No clients found.
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
