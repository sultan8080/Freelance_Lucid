<form method="post" action="{{ path('app_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('Are you sure you want to delete this invoice draft?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
	<button class="px-4 py-2 text-sm font-semibold text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition-colors shadow-sm">
		Delete
	</button>
</form>

