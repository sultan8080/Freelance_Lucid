{% extends 'dashboard/base.html.twig' %}

{% block title %}
	{{ 'tech.architecture.title'|trans }}
{% endblock %}

{% block dashboard_content %}
	<div
		class="space-y-8 mb-20">

		{# --- HERO SECTION --- #}
		<div
			class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-slate-800 to-slate-900 border border-white/10 p-8 lg:p-12 shadow-2xl">
			{# Ambient Background Effects #}
			<div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-purple-500/20 rounded-full blur-3xl pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-80 h-80 bg-blue-500/20 rounded-full blur-3xl pointer-events-none"></div>

			<div class="relative z-10">
				<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-300 text-xs font-bold uppercase tracking-wider mb-6">
					<i class="fa-solid fa-code"></i>
					{{ 'hero.badge'|trans }}
				</div>

				<h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6 leading-tight">
					{{ 'hero.title.part1'|trans }}
					<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">{{ 'hero.title.part2'|trans }}</span>
				</h1>

				<p class="text-md lg:text-lg text-slate-300 max-w-5xl leading-relaxed">
					{{ 'hero.description.part1'|trans }}
					<strong class="text-white">{{ 'hero.description.billing'|trans }}</strong>
					{{ 'hero.description.for'|trans }}
					<strong class="text-white">{{ 'hero.description.freelancers'|trans }}</strong>,
					{{ 'hero.description.covering'|trans }}
					<strong class="text-blue-300">{{ 'hero.description.crm'|trans }}</strong>,
					<strong class="text-blue-300">{{ 'hero.description.invoicing'|trans }}</strong>,
					{{ 'hero.description.and'|trans }}
					<strong class="text-purple-300">{{ 'hero.description.analytics'|trans }}</strong>.<br class="hidden md:block">
					<span class="block mt-2">
						{{ 'hero.description.tech'|trans }}
						<strong class="text-white">Symfony 7.4</strong>,
						{{ 'hero.description.strict'|trans }}
					</span>
				</p>

				<div class="flex flex-wrap gap-4 mt-8">
					<a href="{{ github_url }}" target="_blank" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white text-slate-900 font-bold hover:bg-slate-200 transition-colors shadow-lg shadow-white/5">
						<i class="fa-brands fa-github text-xl"></i>
						{{ 'hero.buttons.source'|trans }}
					</a>
					<a href="#" target="_blank" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white/5 border border-white/10 text-white font-bold hover:bg-white/10 transition-colors backdrop-blur-sm">
						<i class="fa-brands fa-linkedin text-xl text-blue-400"></i>
						{{ 'hero.buttons.contact'|trans }}
					</a>
				</div>
			</div>
		</div>

		{# --- BENTO GRID LAYOUT --- #}
		<div
			class="grid grid-cols-1 md:grid-cols-3 gap-6">

			{# 1. DATABASE SCHEMA #}
			<div class="md:col-span-2 glass-card rounded-2xl overflow-hidden group border border-white/5 flex flex-col">
				<div class="bg-slate-900/50 p-6 border-b border-white/5 flex justify-between items-center backdrop-blur-md">
					<div>
						<h3 class="text-xl font-bold text-white flex items-center gap-2">
							<i class="fa-solid fa-database text-emerald-400"></i>
							{{ 'bento.schema.title'|trans }}
						</h3>
						<p class="text-sm text-slate-400 mt-1">{{ 'bento.schema.subtitle'|trans }}</p>
					</div>
					<span class="text-xs font-mono bg-emerald-500/10 text-emerald-400 px-2 py-1 rounded border border-emerald-500/20 whitespace-nowrap">
						{{ 'bento.schema.badge'|trans }}
					</span>
				</div>

				<div class="relative bg-white/5 p-8 flex items-center justify-center flex-grow min-h-[300px]">
					<img src="{{ asset('images/MCD.png') }}" alt="{{ 'bento.schema.alt'|trans }}" class="max-h-[350px] w-auto drop-shadow-2xl transition-transform duration-500 group-hover:scale-[1.02]">

					<div class="absolute bottom-4 right-4">
						<a href="{{ asset('images/MCD.png') }}" target="_blank" class="p-2 bg-slate-800 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700 transition-colors shadow-lg" title="{{ 'bento.schema.open'|trans }}">
							<i class="fa-solid fa-expand"></i>
						</a>
					</div>
				</div>
			</div>

			{# 2. TECH STACK (Sidebar) #}
			<div
				class="space-y-6 flex flex-col">

				{# Backend #}
				<div class="glass-card p-6 rounded-2xl border border-white/5 flex-1">
					<h3 class="text-lg font-bold text-white mb-4 border-b border-white/5 pb-2">{{ 'stack.core.title'|trans }}</h3>
					<ul class="space-y-4">
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-white text-black flex items-center justify-center shadow-lg">
								<i class="fa-brands fa-symfony text-xl"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">Symfony 7.4</span>
								<span class="text-xs text-slate-500">{{ 'stack.core.symfony'|trans }}</span>
							</div>
						</li>
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-[#777BB4] flex items-center justify-center text-white shadow-lg">
								<i class="fa-brands fa-php text-xl"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">PHP 8.2+</span>
								<span class="text-xs text-slate-500">{{ 'stack.core.php'|trans }}</span>
							</div>
						</li>
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-[#003545] flex items-center justify-center text-white shadow-lg">
								<i class="fa-solid fa-database text-lg"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">MariaDB 10.4</span>
								<span class="text-xs text-slate-500">{{ 'stack.core.mariadb'|trans }}</span>
							</div>
						</li>
					</ul>
				</div>

				{# Frontend #}
				<div class="glass-card p-6 rounded-2xl border border-white/5 flex-1">
					<h3 class="text-lg font-bold text-white mb-4 border-b border-white/5 pb-2">{{ 'stack.frontend.title'|trans }}</h3>
					<ul class="space-y-4">
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-[#38BDF8] flex items-center justify-center text-white shadow-lg">
								<i class="fa-brands fa-css3 text-xl"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">Tailwind 4.1</span>
								<span class="text-xs text-slate-500">{{ 'stack.frontend.tailwind'|trans }}</span>
							</div>
						</li>
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-[#F7DF1E] flex items-center justify-center text-black shadow-lg">
								<i class="fa-solid fa-bolt text-lg"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">AssetMapper</span>
								<span class="text-xs text-slate-500">{{ 'stack.frontend.assetmapper'|trans }}</span>
							</div>
						</li>
						<li class="flex items-center gap-3 text-slate-300">
							<div class="w-10 h-10 rounded-lg bg-indigo-600 flex items-center justify-center text-white shadow-lg">
								<i class="fa-solid fa-layer-group text-lg"></i>
							</div>
							<div>
								<span class="block font-bold text-white leading-tight">Symfony UX</span>
								<span class="text-xs text-slate-500">{{ 'stack.frontend.ux'|trans }}</span>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>

		{# --- SECTION 3: ENGINEERING HIGHLIGHTS --- #}
		<div
			class="grid grid-cols-1 md:grid-cols-3 gap-6">

			{# Feature 1 #}
			<div class="glass-card p-6 rounded-2xl border-t-4 border-t-blue-500 hover:bg-white/5 transition-colors">
				<div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center text-blue-400 text-xl mb-4">
					<i class="fa-solid fa-robot"></i>
				</div>
				<h3 class="text-lg font-bold text-white mb-2">{{ 'highlights.automation.title'|trans }}</h3>
				<p class="text-sm text-slate-400 leading-relaxed min-h-[3rem]">
					{{ 'highlights.automation.text'|trans }}
				</p>
				<div class="mt-4 pt-4 border-t border-white/5 text-xs font-mono text-slate-500 bg-black/20 p-2 rounded">
					bin/console app:cleanup-guests
				</div>
			</div>

			{# Feature 2 #}
			<div class="glass-card p-6 rounded-2xl border-t-4 border-t-purple-500 hover:bg-white/5 transition-colors">
				<div class="w-12 h-12 rounded-full bg-purple-500/10 flex items-center justify-center text-purple-400 text-xl mb-4">
					<i class="fa-solid fa-file-invoice"></i>
				</div>
				<h3 class="text-lg font-bold text-white mb-2">{{ 'highlights.integrity.title'|trans }}</h3>
				<p class="text-sm text-slate-400 leading-relaxed">
					{{ 'highlights.integrity.text'|trans }}
				</p>
			</div>

			{# Feature 3 #}
			<div class="glass-card p-6 rounded-2xl border-t-4 border-t-emerald-500 hover:bg-white/5 transition-colors">
				<div class="w-12 h-12 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400 text-xl mb-4">
					<i class="fa-solid fa-shield-halved"></i>
				</div>
				<h3 class="text-lg font-bold text-white mb-2">{{ 'highlights.security.title'|trans }}</h3>
				<p class="text-sm text-slate-400 leading-relaxed">
					{{ 'highlights.security.text'|trans }}
				</p>
			</div>

		</div>

		{# --- SECTION 4: DOCUMENTATION LINKS --- #}
		<div class="glass-card p-8 rounded-2xl border border-white/5">
			<h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
				<i class="fa-solid fa-book-open text-pink-400"></i>
				{{ 'docs.title'|trans }}
			</h3>

			<div
				class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">

				{# 1. Dev Journal #}
				<div class="group p-5 rounded-xl bg-white/5 border border-white/10 hover:border-pink-500/50 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full shadow-lg">
					<div class="mb-4">
						<div class="flex items-center justify-between mb-3">
							<i class="fa-solid fa-timeline text-pink-400 text-2xl group-hover:scale-110 transition-transform"></i>
						</div>
						<div class="font-bold text-white text-lg">{{ 'docs.journal.title'|trans }}</div>
						<div class="text-xs text-slate-400 mt-1">{{ 'docs.journal.desc'|trans }}</div>
					</div>
					<div class="flex gap-2 mt-auto pt-4 border-t border-white/5">
						<a href="{{ github_url }}/blob/main/docs/docs_EN/JOURNAL_EN.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-pink-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
						EN
						</a>
						<a href="{{ github_url }}/blob/main/docs/docs_FR/JOURNAL_FR.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-pink-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
							FR
						</a>
					</div>
				</div>

				{# 2. Specifications #}
				<div class="group p-5 rounded-xl bg-white/5 border border-white/10 hover:border-blue-500/50 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full shadow-lg">
					<div class="mb-4">
						<div class="flex items-center justify-between mb-3">
							<i class="fa-solid fa-list-check text-blue-400 text-2xl group-hover:scale-110 transition-transform"></i>
						</div>
						<div class="font-bold text-white text-lg">{{ 'docs.specs.title'|trans }}</div>
						<div class="text-xs text-slate-400 mt-1">{{ 'docs.specs.desc'|trans }}</div>
					</div>
					<div class="flex gap-2 mt-auto pt-4 border-t border-white/5">
						<a href="{{ github_url }}/blob/main/docs/docs_EN/SPECIFICATIONS.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-blue-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
							EN
						</a>
						<a href="{{ github_url }}/blob/main/docs/docs_FR/CAHIER_DES_CHARGES.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-blue-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
							FR
						</a>
					</div>
				</div>

				{# 3. Work Plan #}
				<div class="group p-5 rounded-xl bg-white/5 border border-white/10 hover:border-purple-500/50 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full shadow-lg">
					<div class="mb-4">
						<div class="flex items-center justify-between mb-3">
							<i class="fa-solid fa-calendar-check text-purple-400 text-2xl group-hover:scale-110 transition-transform"></i>
						</div>
						<div class="font-bold text-white text-lg">{{ 'docs.plan.title'|trans }}</div>
						<div class="text-xs text-slate-400 mt-1">{{ 'docs.plan.desc'|trans }}</div>
					</div>
					<div class="flex gap-2 mt-auto pt-4 border-t border-white/5">
						<a href="{{ github_url }}/blob/main/docs/docs_EN/WORK_PLAN.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-purple-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
						EN
						</a>
						
						<a href="{{ github_url }}/blob/main/docs/docs_FR/PLANNING.md" target="_blank" class="flex-1 px-3 py-2 rounded-lg bg-black/20 hover:bg-purple-500 hover:text-white text-xs font-bold text-slate-300 border border-white/10 text-center transition-all">
							FR
						</a>
					</div>
				</div>

				{# 4. Repository Link #}
				<a href="{{ github_url }}" target="_blank" class="group p-5 rounded-xl bg-white/5 border border-white/10 hover:border-emerald-500/50 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full shadow-lg">
					<div class="mb-4">
						<div class="flex items-center justify-between mb-3">
							<i class="fa-solid fa-code-branch text-emerald-400 text-2xl group-hover:scale-110 transition-transform"></i>
							<i class="fa-solid fa-arrow-up-right-from-square text-xs text-slate-500"></i>
						</div>
						<div class="font-bold text-white text-lg">{{ 'docs.repo.title'|trans }}</div>
						<div class="text-xs text-slate-400 mt-1">{{ 'docs.repo.desc'|trans }}</div>
					</div>
					<div class="mt-auto pt-4">
						<div class="w-full py-2 rounded-lg bg-emerald-500/10 text-emerald-400 text-xs font-bold text-center border border-emerald-500/20 group-hover:bg-emerald-500 group-hover:text-white transition-colors">
							{{ 'docs.repo.button'|trans }}
						</div>
					</div>
				</a>

			</div>
		</div>

	</div>
{% endblock %}
