{% extends 'base.html.twig' %}

{% block title %}
	Sign up
{% endblock %}

{% block body %}

	<div class="absolute top-0 left-0 w-full z-50">
		<div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-end">
			<div class="relative group border border-slate-700 rounded-md px-4 py-2">
				<button class="flex items-center gap-1.5 text-sm font-medium text-slate-200 hover:text-white transition-colors uppercase">
					<i class="fa-solid fa-earth-europe opacity-50 group-hover:opacity-100"></i>
					<span class="opacity-65 group-hover:opacity-100">{{ app.request.locale }}</span>
					<i class="fa-solid fa-chevron-down opacity-50 group-hover:opacity-100 text-xs"></i>
				</button>
				<div class="absolute right-0 top-full hidden group-hover:block pt-2 z-50">
					<div class="w-24 bg-slate-800 border border-slate-700 rounded-md shadow-lg py-1">
						{% for locale in ['en', 'fr'] %}
							{% if locale != app.request.locale %}
								<a href="{{ path(app.request.attributes.get('_route')|default('app_home'), app.request.attributes.get('_route_params', {})|merge({'_locale': locale})) }}" data-turbo="false" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition-colors uppercase">
									{{ locale }}
								</a>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="min-h-screen flex items-center justify-center px-4 py-12 relative z-10">

		<div class="glass-card w-full max-w-md p-8 sm:p-10 relative">

			<div class="text-center mb-8">
				<div class="mx-auto w-12 h-12 rounded-xl bg-gradient-to-br from-blue-600 to-purple-700 flex items-center justify-center shadow-[0_0_20px_rgba(124,58,237,0.4)] mb-5 relative overflow-hidden group">
					<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/30 to-transparent group-hover:animate-shimmer"></div>
					<i class="fa-brands fa-slack text-white font-bold relative z-10 text-xl"></i>
				</div>

				<h2 class="text-3xl mt-2 font-bold text-white mb-2 tracking-tight">Create Account</h2>
				<p class="text-slate-400 text-sm">Join Freelance Flow today</p>
			</div>

			{{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

			<div id="flash-messages" class="mb-6">
				{% include '_partials/_flash_messages.html.twig' %}
			</div>

			<div>
				{{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-1.5'}}) }}
				{{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'input-glass',
                        'placeholder': 'you@example.com'
                    }
                }) }}

				{% if registrationForm.email.vars.errors|length > 0 %}
					<div class="text-red-400 text-xs mt-1 flex items-center gap-1">
						<i class="fa-solid fa-circle-exclamation text-[10px]"></i>
						<span>{{ form_errors(registrationForm.email)|striptags }}</span>
					</div>
				{% endif %}
			</div>

			<div>
				{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-1.5'}}) }}
				{{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'input-glass',
                        'placeholder': '••••••••'
                    }
                }) }}

				{#  Error Logic #}
				{% if registrationForm.plainPassword.vars.errors|length > 0 %}
					<div class="text-red-400 text-xs mt-1 flex items-center gap-1">
						<i class="fa-solid fa-circle-exclamation text-[10px]"></i>
						<span>{{ form_errors(registrationForm.plainPassword)|striptags }}</span>
					</div>
				{% endif %}
			</div>

			<div class="flex items-start mt-4 mb-2">
				<div class="flex items-center h-5">
					{{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'h-4 w-4 rounded border-white/10 bg-white/5 text-blue-600 focus:ring-blue-500 focus:ring-offset-slate-900 transition cursor-pointer'}
                    }) }}
				</div>
				<div class="ml-2 text-sm">
					{{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', {'label_attr': {'class': 'text-slate-400 select-none cursor-pointer hover:text-slate-300 transition-colors'}}) }}
				</div>
			</div>

			{# Error Logic for Checkbox #}
			{% if registrationForm.agreeTerms.vars.errors|length > 0 %}
				<div class="text-red-400 text-xs mb-4 flex items-center gap-1">
					<i class="fa-solid fa-circle-exclamation text-[10px]"></i>
					<span>{{ form_errors(registrationForm.agreeTerms)|striptags }}</span>
				</div>
			{% endif %}

			<button type="submit" class="group relative w-full flex justify-center py-3 px-4 rounded-lg overflow-hidden transition-all duration-300 shadow-lg shadow-blue-600/20 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-slate-900">
				<div class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-600 to-purple-700 opacity-90 group-hover:opacity-100 transition-opacity"></div>
				<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent group-hover:animate-shimmer"></div>
				<span class="relative text-sm font-semibold text-white">Create Account</span>
			</button>

			<div class="text-center mt-6">
				<p class="text-sm text-slate-400">
					Already have an account?
					<a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300 font-medium transition-colors">Sign in instead</a>
				</p>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
